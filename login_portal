<body>
  <div class="container">
  
    <div class="card student-card" onclick="showLogin('student')">
      <img src="https://img.icons8.com/fluency/96/student-center.png" alt="Student" />
      <h2>Student Login</h2>
    </div>

 
    <div class="card staff-card" onclick="showLogin('staff')">
      <img src="https://img.icons8.com/fluency/96/teacher.png" alt="Staff" />
      <h2>Staff Login</h2>
    </div>

 
    <div class="login-form student-form" id="studentForm">
      <h2>Student Login</h2>
      <input type="text" placeholder="Student ID">
      <input type="password" placeholder="Password">
      <button>Login</button>
      <button class="back-btn" onclick="goBack()">Back</button>
    </div>

   
    <div class="login-form staff-form" id="staffForm">
      <h2>Staff Login</h2>
      <input type="text" placeholder="Staff ID">
      <input type="password" placeholder="Password">
      <button>Login</button>
      <button class="back-btn" onclick="goBack()">Back</button>
    </div>
  </div>

  <script>
    function showLogin(type) {
      const studentCard = document.querySelector('.student-card');
      const staffCard = document.querySelector('.staff-card');
      const studentForm = document.getElementById('studentForm');
      const staffForm = document.getElementById('staffForm');

      if (type === 'student') {
        studentCard.classList.remove('hide');
        staffCard.classList.add('hide');
        studentForm.style.display = 'flex';
        staffForm.style.display = 'none';
      } else {
        staffCard.classList.remove('hide');
        studentCard.classList.add('hide');
        staffForm.style.display = 'flex';
        studentForm.style.display = 'none';
      }
    }

    function goBack() {
   
      document.querySelector('.student-card').classList.remove('hide');
      document.querySelector('.staff-card').classList.remove('hide');

       
      document.getElementById('studentForm').style.display = 'none';
      document.getElementById('staffForm').style.display = 'none';
    }
  </script>
</body>
