<body>
  <div class="container">

 
    <div class="card-container" id="loginCards">
      <div class="card student-card" onclick="showLogin('student')">
        <img src="https://img.icons8.com/fluency/96/student-center.png" alt="Student" />
        <h2>Student Login</h2>
      </div>

      <div class="card staff-card" onclick="showLogin('staff')">
        <img src="https://img.icons8.com/fluency/96/teacher.png" alt="Staff" />
        <h2>Staff Login</h2>
      </div>
    </div>

 
    <div class="login-form" id="studentForm">
      <h2 class="text-center">Student Login</h2>
      <input type="text" id="studentId" placeholder="Student ID">
      <input type="password" id="studentPass" placeholder="Password">
      <button onclick="loginStudent()">Login</button>
      <button class="back-btn" onclick="goBack()">Back</button>
    </div>

 
    <div class="login-form" id="staffForm">
      <h2>Staff Login</h2>
      <input type="text" placeholder="Staff ID">
      <input type="password" placeholder="Password">
      <button>Login</button>
      <button class="back-btn" onclick="goBack()">Back</button>
    </div>

   
    <div class="profile-card" id="profilePage">
      <div class="images">
        <img src="stud_png/stud.jpeg" alt="Student Photo" class="img-fluid">
      </div>

      <div class="info">
        <div class="info-list">
          <div class="info-row">
            <div class="label">Name</div>
            <div class="colon">:</div>
            <div class="value"><input type="text" id="pName" readonly></div>
          </div>
          <div class="info-row">
            <div class="label">Year</div>
            <div class="colon">:</div>
            <div class="value"><input type="text" id="pYear" readonly></div>
          </div>
          <div class="info-row">
            <div class="label">Department</div>
            <div class="colon">:</div>
            <div class="value"><input type="text" id="pDept" readonly></div>
          </div>
        </div>
        <div class="btns mt-3">
          <button>Info</button>
          <button>Confirm</button>
        </div>
      </div>
    </div>

  </div>

  <script>
    const students = [
      {
        id: "1001",
        password: "pass123",
        name: "Frontend",
        year: "2025",
        department: "Abc"
      },
      {
        id: "1002",
        password: "abc456",
        name: "backend",
        year: "2024",
        department: "Cde"
      }
    ];

    function showLogin(type) {
      document.getElementById("loginCards").style.display = "none";
      document.getElementById("studentForm").style.display = type === 'student' ? 'flex' : 'none';
      document.getElementById("staffForm").style.display = type === 'staff' ? 'flex' : 'none';
    }

    function goBack() {
      document.getElementById("loginCards").style.display = "flex";
      document.getElementById("studentForm").style.display = "none";
      document.getElementById("staffForm").style.display = "none";
      document.getElementById("profilePage").style.display = "none";
    }

    function loginStudent() {
      const id = document.getElementById("studentId").value.trim();
      const pass = document.getElementById("studentPass").value.trim();
      const student = students.find(s => s.id === id && s.password === pass);

      if (student) {
        
        document.getElementById("pName").value = student.name;
        document.getElementById("pYear").value = student.year;
        document.getElementById("pDept").value = student.department;

        
        document.getElementById("studentForm").style.display = "none";
        document.getElementById("profilePage").style.display = "flex";
      } else {
        alert("Invalid Student ID or Password");
      }
    }
  </script>
</body>
